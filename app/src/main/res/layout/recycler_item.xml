<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/for_icon"
        android:layout_height="@dimen/for_icon"
        android:contentDescription="@string/current_image_or_placeholder"
        android:src="@drawable/wallpapericon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLarge"
            android:layout_width="@dimen/st_phone_width"
            android:layout_height="wrap_content"
            android:text="@string/text_placeholder"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/my_text_size" />

        <TextView
            android:id="@+id/textViewSmall"
            android:layout_width="@dimen/st_phone_width"
            android:layout_height="wrap_content"
            android:text="@string/text_placeholder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/my_text_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/deleter"
        android:layout_width="@dimen/for_icon"
        android:layout_height="@dimen/for_icon"
        android:contentDescription="@string/delete_icon"
        android:src="@drawable/deleteicon" />

</LinearLayout>
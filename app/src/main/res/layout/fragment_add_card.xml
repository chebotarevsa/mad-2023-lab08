<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardFragment">

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="@dimen/card_img"
        android:layout_height="@dimen/card_img"
        android:src="@drawable/panorama_outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/questionAddText"
        android:layout_marginTop="@dimen/card_view_image_margin_top" />

    <EditText
        android:id="@+id/questionAddText"
        android:layout_width="@dimen/textWrite"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_text_margin"
        android:hint="@string/questionAdd"
        android:inputType="text"
        android:minHeight="@dimen/minH"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <EditText
        android:id="@+id/hintAddText"
        android:layout_width="@dimen/textWrite"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_text_margin"
        android:hint="@string/hintAdd"
        android:inputType="text"
        android:minHeight="@dimen/minH"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionAddText" />

    <EditText
        android:id="@+id/answerAddText"
        android:layout_width="@dimen/textWrite"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_text_margin"
        android:hint="@string/answerAdd"
        android:inputType="text"
        android:minHeight="@dimen/minH"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintAddText" />

    <EditText
        android:id="@+id/translationAddText"
        android:layout_width="@dimen/textWrite"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_text_margin"
        android:hint="@string/translateAdd"
        android:inputType="text"
        android:minHeight="@dimen/minH"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerAddText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin_end"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:src="@drawable/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/maxImageSize"
        android:contentDescription="@string/s" />

</androidx.constraintlayout.widget.ConstraintLayout>